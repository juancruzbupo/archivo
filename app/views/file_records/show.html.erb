<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @file_record.title %>
</p>

<p>
  <strong>Step:</strong>
  	<br>
    <% @file_record.steps.each do |step| %>
  	<tr>
        <td><%= step.office.name  if step.office%></td>
    </tr>
    <%end%>
</p>

<%= link_to 'Edit', edit_file_record_path(@file_record) %> 
<%= link_to 'Back', file_records_path %>

<strong>Cargar nuevo Step:</strong>
<br>
<%= form_for [@file_record, @file_record.steps.build] do |f| %>
<%= f.collection_select(:office_id, Office.all, :id, :name) %>
<%= f.submit %>
<% end %>
 